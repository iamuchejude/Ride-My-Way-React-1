{
  "root": true,
  "extends": [ "airbnb-base", "plugin:react/recommended" ],
  "plugins": [
    "react"
  ],
  "parser": "babel-eslint",
  "settings": {
    "react": {
      "version": "16.0"
    }
  },
  "env": {
    "node": true,
    "es6": true,
    "browser": true,
    "jest": true
  },
  "rules": {
    "react/jsx-no-bind": [
      "error",
      {
        "allowArrowFunctions": true,
        "allowBind": false,
        "ignoreRefs": true
      }
    ]
  }
}